{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Hapinness Score",
    "width": 800,
    "height": 600,
    "data": {
      "url": "https://github.com/sookmun/FIT3179_Week9_Homework/tree/main/js/week9.topojson",
      "format": {
            "type": "topojson",
            "feature": "week9"
          }
    },
    "transform": [{
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://github.com/sookmun/FIT3179_Week9_Homework/tree/main/Data/2020.csv"
          },
          "key": "Country",
          "fields": ["Ladder score"]
        }
      }
    ],
    "projection": {
      "type": "equirectangular"
    },
    "mark": {
      "type": "geoshape"
      },
    "encoding": {
      "color": {
        "field": "Ladder score",
        "type": "quantitative"
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country name"}
      ]
    }
  
  }
  